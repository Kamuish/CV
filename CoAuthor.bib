  langid = {english},
  keywords = {Astrophysics - Earth and Planetary Astrophysics,Astrophysics - Solar and Stellar Astrophysics},
  file = {/home/amiguel/Zotero/zotero_documents/Faria et al_2022_A candidate short-period sub-Earth orbiting Proxima Centauri.pdf}
}

@article{lillo-boxHD22496bFirstESPRESSO2021,
