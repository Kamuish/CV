@article{palethorpeConfrontingCompositionalConfusion2024,
  title = {Confronting Compositional Confusion through the Characterisation of the Sub-{{Neptune}} Orbiting {{HD}} 77946},
  author = {Palethorpe, L. and John, A. Anna and Mortier, A. and Davoult, J. and Wilson, T. G. and Rice, K. and Cameron, A. C. and Alibert, Y. and Buchhave, L. A. and Malavolta, L. and Cadman, J. and {L{\'o}pez-Morales}, M. and Dumusque, X. and Silva, A. M. and Quinn, S. N. and Van Eylen, V. and Vissapragada, S. and Affer, L. and Charbonneau, D. and Cosentino, R. and Ghedina, A. and Haywood, R. D. and Latham, D. and Lienhard, F. and Fiorenzano, A. F. Mart{\'i}nez and Pedani, M. and Pepe, F. and Pinamonti, M. and Sozzetti, A. and Stalport, M. and Udry, S. and Vanderburg, A.},
  year = {2024},
  publisher = {{[object Object]}},
  doi = {10.48550/ARXIV.2403.04464},
  urldate = {2024-03-11},
  abstract = {We report on the detailed characterization of the HD 77946 planetary system. HD 77946 is an F5 (\$M\_*\$ = 1.17 M\$\_\{{\textbackslash}odot\}\$, \$R\_*\$ = 1.31 R\$\_\{{\textbackslash}odot\}\$) star, which hosts a transiting planet recently discovered by NASA's Transiting Exoplanet Survey Satellite (TESS), classified as TOI-1778 b. Using TESS photometry, high-resolution spectroscopic data from HARPS-N, and photometry from CHEOPS, we measure the radius and mass from the transit and RV observations, and find that the planet, HD 77946 b, orbits with period \$P\_\{{\textbackslash}rm b\}\$ = \$6.527282\_\{-0.000020\}\^{}\{+0.000015\}\$ d, has a mass of \$M\_\{{\textbackslash}rm b\} = 8.38{\textbackslash}pm\{1.32\}\$M\$\_{\textbackslash}oplus\$, and a radius of \$R\_\{{\textbackslash}rm b\} = 2.705\_\{-0.081\}\^{}\{+0.086\}\$R\$\_{\textbackslash}oplus\$. From the combination of mass and radius measurements, and the stellar chemical composition, the planet properties suggest that HD 77946 b is a sub-Neptune with a \${\textbackslash}sim\$1{\textbackslash}\% H/He atmosphere. However, a degeneracy still exists between water-world and silicate/iron-hydrogen models, and even though interior structure modelling of this planet favours a sub-Neptune with a H/He layer that makes up a significant fraction of its radius, a water-world composition cannot be ruled out, as with \$T\_\{{\textbackslash}rm eq\} = 1248\^{}\{+40\}\_\{-38\}{\textasciitilde}\$K, water may be in a supercritical state. The characterisation of HD 77946 b, adding to the small sample of well-characterised sub-Neptunes, is an important step forwards on our journey to understanding planetary formation and evolution pathways. Furthermore, HD 77946 b has one of the highest transmission spectroscopic metrics for small planets orbiting hot stars, thus transmission spectroscopy of this key planet could prove vital for constraining the compositional confusion that currently surrounds small exoplanets.},
  copyright = {Creative Commons Attribution 4.0 International},
  keywords = {/unread}
}

